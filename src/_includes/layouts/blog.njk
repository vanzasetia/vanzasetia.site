---
layout: layouts/base.njk
---

<main id="main" class="flow" tabindex="-1">
  <h1>{{ title }}</h1>
  {% include "blog/date.njk" %}
  {% include "description.njk" %}
  {% include "toc.njk" %}
  {{ content | safe }}
  {% set mentions = webmentions | webmentionsForPage %}
  {% if (mentions.total) %}
    <hr>
    <aside class="flow" aria-labelledby="aside-webmention">
      <h2 id="aside-webmention">Webmention</h2>
      <p>{{ mentions.total }} mention{% if (mentions.total !== 1) %}s{% endif %} in total.  Powered by <a href="https://webmention.io/">Webmention.io</a> and <a href="https://brid.gy/">Bridgy</a>.</p>
      {% include "blog/webmention.njk" %}
    </aside>
  {% endif %}
  {% if generatedByAI === false %}
  <hr>
  <aside class="flow" aria-labelledby="written-by-human-not-ai">
    <picture>
      <source srcset="/svg/written-by-human-not-by-ai-badge-black.svg 264w"  media="screen and (prefers-color-scheme: dark)" />
      <img id="written-by-human-not-ai" src="/svg/written-by-human-not-by-ai-badge-white.svg" alt="Smile emoji. Written by human not by AI." width="264" height="84" loading="lazy" decoding="async">
    </picture>
    <p>
      <a href="https://notbyai.fyi/">
        Not By AI â€” Add the 'Not By AI' Badge to Your Creative Work
      </a>
    </p>
  </aside>
  {% endif %}
</main>
